<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aser.careerbook.FindMyUniversty">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/listbackground"
        android:layout_margin="5dp"
        android:onClick="open_engineering"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cogwheel"
            android:layout_gravity="right"

            />
        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Engnireeng / Technology"
            android:gravity=""
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/listbackground"
        android:layout_margin="5dp"
        android:onClick="open_gs"

        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/genral"
            android:layout_gravity="right"

            />
        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="General Science"
            android:gravity=""
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/listbackground"
        android:layout_margin="5dp"
        android:onClick="open_business"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/idea"
            android:layout_gravity="right"

            />
        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Business / Commerce"
            android:gravity=""
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/listbackground"
        android:layout_margin="5dp"
        android:onClick="open_it"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cs"
            android:layout_gravity="right"

            />
        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Computer Science / IT"
            android:gravity=""
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>






    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_menu"
        android:layout_gravity="bottom"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu="@menu/bottom_navigation"
        />

</LinearLayout>
